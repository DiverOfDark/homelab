{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/\\.yaml$/",
      "/\\.yml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/",
      "/\\.yml$/"
    ]
  },
  "packageRules": [
    {
      "groupName": "kubernetes",
      "groupSlug": "kubernetes",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "registry.k8s.io/kube-scheduler**",
        "registry.k8s.io/kube-proxy**",
        "registry.k8s.io/kube-controller-manager**",
        "registry.k8s.io/kube-apiserver**"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/(^|/)main\\.y[a]?ml$/"
      ],
      "matchStrings": [
        "#\\s*renovate: image=(?<depName>.*?)\\s+talosctl_version:\\s*[\"']?(?<currentValue>[\\w+\\.\\-]*)",
        "#\\s*renovate: image=(?<depName>.*?)\\s+[\\w]*version:\\s*[\"']?(?<currentValue>[\\w+\\.\\-]*)"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/(^|/).*\\.y[a?]ml$/"
      ],
      "matchStrings": [
        "image: [\"']?(?<depName>.*?):(?<currentValue>[\\w+\\.\\-]*)"
      ]
    }
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 50,
  "automerge": false,
  "automergeType": "branch",
  "labels": [
    "automerge"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
